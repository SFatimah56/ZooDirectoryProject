<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="edu.csueb.android.zoodirectory">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ZooDirectory"
        tools:targetApi="31">

        <activity
            android:name=".AnimalListingActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.ZooDirectory">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ZooInformationActivity"
            android:exported="false"
            android:label="@string/zoo_information_label"
            android:theme="@style/Theme.ZooDirectory" />

        <activity
            android:name=".AnimalDetailActivity"
            android:exported="false"
            android:label="@string/animal_detail_label"
            android:theme="@style/Theme.ZooDirectory" />

    </application>
</manifest>